<div class="product-page">
  <p>Home/{{subcategName}}/{{title}}</p>
  <div class="product-page-grid">
    <div class="product-page-img">
      {{#assign "largeImageFound" ""}}{{/assign}}
      {{#each product.image_groups}}
        {{#unless @root.largeImageFound}}
          {{#ifeq this.view_type "large"}}
            {{#with images.[0]}}
              {{#assign "largeImageFound" "true"}}{{/assign}}
              <img
                src="../../../images/{{link}}"
                alt="Product Image"
                class="product-page-img"
              />

            {{/with}}
          {{/ifeq}}
        {{/unless}}

      {{/each}}
    </div>
    <div class="product-info">
      <p class="product-page-name">{{product.name}}</p>
      <p class="product-page-desc">{{product.page_description}}</p>
      <div class="buy-price">
        <button class="buy-button">Buy now</button>
        {{#ifeq product.currency "USD"}}
          <p class="price">Price: $ {{product.price}}</p>
        {{/ifeq}}
      </div>
    </div>
  </div>
</div>